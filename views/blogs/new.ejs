<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-8 col-sm-12 rounded border border-secondary">
            <h3 class="mt-3 mb-2 text-center">New Post</h3>
            <form action="/blogs" method="post">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" id="title" name="blog[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="blog[image]" id="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <label>Blog Content</label>
                    <div><textarea name="blog[body]" rows="5" cols="54" required></textarea></div>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-3">Submit</button>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer %>