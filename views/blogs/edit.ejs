<% include ../partials/header %>

<div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8 col-sm-12 rounded border border-secondary">
                <h3 class="mt-3 mb-2 text-center">Edit <%= blog.title %></h3>
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" type="text" name="image" id="image" value="<%= blog.image %>">
                    </div>
                    <div class="form-group">
                        <label>Blog Content</label>
                        <div><textarea name="body" rows="5" cols="54" required><%= blog.body %></textarea></div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mb-3">Submit</button>
                </form>
            </div>
        </div>
    </div>


<% include ../partials/footer %>